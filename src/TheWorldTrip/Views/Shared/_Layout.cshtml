<!DOCTYPE html>
<html>

<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/css/site.css" />

</head>

<body>

    <div id="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <img src="~/img/user1.jpg" alt="headshot" class="headshot" />
            <span id="userName">Sam Hastings</span>

        }

            <ul class="menu">
                <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="About">About</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="App" asp-action="Trips">Trips</a></li>
                    <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <li><a asp-controller="Auth" asp-action="Login">Login</a></li>
                }
            </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="menuToggle">Toggle Menu</button>
            </div>
            @RenderBody()
        </div>
        <div id="footer">
            &copy; 2015 The World Ltd.
        </div>
    </div>
    @*Script bower ile değiştirilecek!*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
    @RenderSection("scripts", false)

    <script src="~/js/site.js"></script>
</body>

</html>